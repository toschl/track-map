{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-6" id="googleMap"></div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-6">
                        <h2>Year</h2>
                        <ul id="yearlist">
                            <li id="yearlist_All">All (0)</li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <h2>Sport</h2>
                        <ul id="sportlist">
                            <li id="sportlist_All">All (0)</li>
                        </ul>
                    </div>
                </div>
                <h2>Track <span id="trackload"></span> <a class="btn btn-primary" href="{{ path('refresh_strava') }}" role="button">Refresh data</a></h2>

                <table id="tracktable" class="table table-striped">
                    <thead>
                    <tr>
                        <th>Date</th>
                        <th>Name</th>
                        <th>Sport</th>
                        <th>Distance</th>
                    </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://maps.googleapis.com/maps/api/js?key={{ google_maps_api_key }}&libraries=geometry&callback=myMap"></script>
{% endblock %}
